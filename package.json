{
  "name": "nodejs-typescript-app",
  "version": "0.4.1",
  "description": "Bootstrap new nodejs typescript projects",
  "main": "index.js",
  "scripts": {
    "clean:dist": "rimraf ./dist",
    "clean:modules": "rimraf ./node_modules",
    "clean": "gts clean",
    "lint": "gts lint",
    "lint:fix": "npx eslint --fix src/**/*.ts && npx eslint --fix test/**/*.ts",
    "prebuild": "npm run clean:dist",
    "build": "tsc",
    "start": "node dist/src/index",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "pretest": "npm.cmd run compile",
    "test": "mocha dist/test/**/*.js",
    "test:dev": "ts-mocha test/**/*.spec.ts -w --watch-files '**/*.ts'",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.199",
    "@types/node": "20.8.2",
    "gts": "^5.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.2.0"
  }
}
